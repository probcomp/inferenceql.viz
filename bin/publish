#!/bin/sh

if [ $# -eq 0 ]; then
    # spreadsheet-dir must be an absolute path
    echo "Usage: ${0} spreadsheet-dir surge-domain"
    exit 1
fi

DIR=$1/.publish

rm -rf $DIR
mkdir $DIR
echo "!node_modules" > $DIR/.surgeignore
cp $1/index.html $DIR
cp -r $1/out $DIR
cp -r $1/resources $DIR
cd $DIR ; surge --domain $2
rm -rf $DIR
